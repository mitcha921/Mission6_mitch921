@{ ViewData["Title"] = "New Movie";
}

@model Mission6_mitch921.Models.MovieEntry
<h1>Add a New Movie to the Collection!</h1>

<div>
    <form method="post">
        <label asp-for="Title">Movie Title</label>
        <input asp-for="Title" /> <br />

        <label asp-for="CategoryID">Category</label>
        <select asp-for="CategoryID">
        <option value="">Select Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
        </select><br />

        <label asp-for="Year">Year of Release</label>
        <input asp-for="Year" /><br />

        <label asp-for="Director">Name of Director</label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating">Content Rating</label>
        <select asp-for="Rating">
            <option value="">Select Rating</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="NC-17">NC-17</option>
            <option value="NR">NR</option>
            <option value="UR">UR</option>
            <option value="TV-14">TV-14</option>
            <option value="TV-PG">TV-PG</option>
            <option value="TV-Y7">TV-Y7</option>
            <option value="TV-MA">TV-MA</option>
            <option value="Other">Other</option>
        </select><br />

        <label asp-for="Edited">Edited?</label>
        <select asp-for="Edited">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select><br />

        <label asp-for="LentTo">Lent To...</label>
        <input asp-for="LentTo" /><br />

        <label asp-for="Notes">Notes</label>
        <input asp-for="Notes" /><br />

        <button type="submit">Add Movie</button>

        <div asp-validation-summary="All"></div>
    </form>
</div>
